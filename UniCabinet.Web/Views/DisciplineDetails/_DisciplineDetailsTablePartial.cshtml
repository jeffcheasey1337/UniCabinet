@model UniCabinet.Core.Models.ViewModel.DisciplineDetail.DisciplineDetailsModalVM

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Курс</th>
            <th>Группа</th>
            <th>Семестр</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody id="detailsTableBody">
        @foreach (var detail in Model.Details)
        {
            <tr>
                <td>@detail.CourseName</td>
                <td>@detail.GroupName</td>
                <td>@detail.SemesterName</td>
                <td>
                    <button class="btn btn-info"
                            onclick="openModal('@Url.Action("DetailInfo", "DisciplineDetails", new { detailId = detail.Id })', 'detailInfoModal')">
                        Подробнее
                    </button>
                    
                        <button class="btn btn-info"
                            onclick="openModal('@Url.Action("EditDisciplineDetailModal", "DisciplineDetails", new { detailId = detail.Id })', 'editDisciplineDetailModal')">
                            Редактировать
                        </button>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("PracticalsList", "Practical", new { detailId = detail.Id })">
                            <i class="bi bi-person-check"></i> Практические
                        </a>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("LecturesList", "Lecture", new { id = detail.Id })">
                            <i class="bi bi-person-check"></i> Лекции
                        </a>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("ExamList", "Exam", new { disciplineDetailId = detail.Id })">
                            <i class="bi bi-person-check"></i> Экзамены
                        </a>
                    

                </td>
            </tr>
        }
    </tbody>
</table>
